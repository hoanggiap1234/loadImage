<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".FragmentListSound">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rcv"/>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
       >
    <Button
        android:id="@+id/btn_barSetTime"
        android:background="@drawable/button_bar_1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        tools:ignore="ButtonStyle" />
    <Button
        android:id="@+id/btn_pausePress"
        android:background="@drawable/button_bar_2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        tools:ignore="ButtonStyle" />
    <Button
        android:id="@+id/btn_setting"
        android:background="@drawable/button_bar_3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        tools:ignore="ButtonStyle" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>