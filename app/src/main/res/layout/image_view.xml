<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vumeter="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imgPlay"
        android:background="@drawable/button_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/img"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintStart_toStartOf="@+id/img"
        />
    <ImageView
        android:id="@+id/imgPause"
        android:background="@drawable/button_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/img"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintStart_toStartOf="@+id/img"
        />
    <io.gresse.hugo.vumeterlibrary.VuMeterView
        app:layout_constraintBottom_toBottomOf="@+id/img"
        app:layout_constraintStart_toStartOf="@id/img"
        android:layout_marginBottom="9dp"
android:id="@+id/vumater"
        vumeter:vumeter_backgroundColor="@android:color/secondary_text_light_nodisable"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        vumeter:vumeter_stopSize="5dp"
        vumeter:vumeter_speed="10"
        vumeter:vumeter_blockSpacing="4dp"
        vumeter:vumeter_blockNumber="20"
        vumeter:vumeter_startOff="false"
        />



</androidx.constraintlayout.widget.ConstraintLayout>